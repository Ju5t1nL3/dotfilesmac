yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"
sudo yabai --load-sa

# bsp, stack, float
yabai -m config layout bsp

yabai -m config window_placement second_child

# padding
yabai -m config top_padding 20
yabai -m config bottom_padding 20
yabai -m config left_padding 25
yabai -m config right_padding 25
yabai -m config window_gap 30 

# mouse settings
yabai -m config mouse_follows_focus on

yabai -m config mouse_modifier cmd

# left click + drag
yabai -m config mouse_action1 move

# right click + drag
yabai -m config mouse_action2 resize

yabai -m mouse_drop_action swap

# window animations
yabai -m config window_animation_duration 0.1
yabai -m config window_animation_easing ease_out_quint

# external bar
yabai -m config external_bar all:70:0

borders active_color=0xffccccff inactive_color=0xff494d64 width=15.0 &
