# config
shell-integration = zsh
theme = Catppuccin Mocha
working-directory = home
window-inherit-working-directory = false

font-family = "FiraCode Nerd Font Mono"
font-size = 20
cursor-style = bar

adjust-cursor-thickness = 3

mouse-hide-while-typing = true

keybind = cmd+r=reload_config

custom-shader = shaders/cursor_smear.glsl

# Send custom CSI sequences for pane navigation
keybind = cmd+left=csi:100;1L
keybind = cmd+right=csi:100;1R
keybind = cmd+up=csi:100;1U
keybind = cmd+down=csi:100;1D

# Send a custom CSI sequence for closing a pane
keybind = cmd+w=csi:100;1w